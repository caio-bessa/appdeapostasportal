{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "./",
    "./**/*.ts",
    "./**/*.js"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    ".tmp/"
  ]
}